<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/application.css" />
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v4.0.0/css/line.css"
    />
    <title>Responsive Regisration Form</title>
  </head>
  <body>
    <div class="container">
      <header>Application Form</header>

      <form id = "application_form" action="/auth/application" method="POST">
        <div class="form first">
          <div class="details personal">
            <span class="title">Personal Details</span>

            <div class="fields">
              <div class="input-field">
                <label>First Name</label>
                <input
                  type="text"
                  name="First_Name"
                  placeholder="Enter your first name"
                  required
                />
              </div>
              <div class="input-field">
                <label>Last Name</label>
                <input
                  type="text"
                  name="Last_Name"
                  placeholder="Enter your last name"
                  required
                />
              </div>
              <div class="input-field">
                <label>Date of Birth</label>
                <input
                  type="date"
                  name="DOB"
                  placeholder="Enter birth date"
                  required
                />
              </div>

              <div class="input-field">
                <label>Email</label>
                <input
                  type="text"
                  name="email"
                  placeholder="Enter your email"
                  required
                />
              </div>

              <div class="input-field">
                <label>Mobile Number</label>
                <input
                  type="number"
                  name="Mobile_Number"
                  placeholder="Enter mobile number"
                  required
                />
              </div>

              <div class="input-field">
                <label>Gender</label>
                <select required name="gender">
                  <option disabled selected>Select gender</option>
                  <option>Male</option>
                  <option>Female</option>
                  <option>Others</option>
                </select>
              </div>
              <div class="input-field">
                <label>Merital status</label>
                <select required name="Merital_Status">
                  <option disabled selected>Select status</option>
                  <option>Unmarried</option>
                  <option>Married</option>
                </select>
              </div>
            </div>
          </div>

          <div class="details family">
            <span class="title">Family Details</span>
            <div class="fields">
              <div class="input-field">
                <label>Father Name</label>
                <input
                  type="text"
                  name="Father_Name"
                  placeholder="Enter father name"
                  required
                />
              </div>

              <div class="input-field">
                <label>Mother Name</label>
                <input
                  type="text"
                  name="Mother_Name"
                  placeholder="Enter mother name"
                  required
                />
              </div>
              <div class="input-field">
                <label>Parent phone number</label>
                <input
                  type="number"
                  name="P_Phone_Number"
                  placeholder="parent phone number"
                  required
                />
              </div>
            </div>
            <button class="nextBtn">
              <span class="btnText">Next</span>
              <i class="uil uil-navigator"></i>
            </button>
          </div>
        </div>

        <div class="form second">
          <div class="details address">
            <span class="title">Address Details</span>

            <div class="fields">
              <div class="input-field">
                <label>present Address</label>
                <input
                  type="text"
                  name="present_Address"
                  placeholder="Present Address"
                  required
                />
              </div>
              <div class="input-field">
                <label>Permanent Address</label>
                <input
                  type="text"
                  name="Permanent_Address"
                  placeholder="Permanent Address"
                  required
                />
              </div>

              <div class="input-field">
                <label>Nationality</label>
                <input
                  type="text"
                  name="Nationality"
                  placeholder="Enter nationality"
                  required
                />
              </div>

              <div class="input-field">
                <label for="district">District</label>
                <input
                  type="text"
                  id="district"
                  name="district"
                  placeholder="Enter your district"
                  required
                />
                <div id="suggestions" class="suggestions"></div>
              </div>
              <div class="input-field">
                <label>Post Code</label>
                <input
                  type="number"
                  name="Post_Code"
                  placeholder="Enter Post Code"
                  required
                />
              </div>
              <div class="input-field">
                <label>Ward Number</label>
                <input
                  type="number"
                  name="Ward_Number"
                  placeholder="Enter ward number"
                  required
                />
              </div>
            </div>
          </div>

          <div class="details ID">
            <span class="title">Identity Details</span>
            <div class="fields">
              <div class="input-field">
                <label>Student ID</label>
                <input
                  type="number"
                  name="Student_ID"
                  placeholder="Enter Student ID"
                  required
                />
              </div>
              <div class="input-field">
                <label>Semester</label>
                <select required name="semester" id="semester">
                  <option disabled selected>Select semester</option>
                  <option>1/1</option>
                  <option>1/2</option>
                  <option>2/1</option>
                  <option>2/2</option>
                  <option>3/1</option>
                  <option>3/2</option>
                  <option>4/1</option>
                  <option>4/2</option>
                  <option>M-1</option>
                  <option>M-2</option>
                </select>
              </div>
              <div class="input-field">
                <label>Department</label>
                <select required name="Department">
                  <option disabled selected>Select department</option>
                  <option>SWE</option>
                  <option>CSE</option>
                  <option>PAD</option>
                  <option>CHE</option>
                  <option>PHY</option>
                  <option>GEB</option>
                  <option>EEE</option>
                  <option>SOC</option>
                  <option>BAN</option>
                  <option>ENG</option>
                  <option>CEE</option>
                </select>
              </div>
              <div class="input-field">
                <label>CGPA</label>
                <input
                  type="text"
                  name="CGPA"
                  placeholder="Enter CGPA (e.g. 3.75)"
                  required
                />
              </div>
              <div class="input-field">
                <label>Last semester GPA</label>
                <input
                  type="number"
                  name="Last_semester_GPA"
                  placeholder="Enter last semester GPA (e.g. 3.75)"
                  required
                />
              </div>
              <div class="input-field">
                <label>Last semester position</label>
                <input
                  type="number"
                  name="Last_semester_position"
                  placeholder="Enter last semester position"
                  required
                />
              </div>
            </div>
            <p id = "error-message" style="color: red"></p>
            <div class="buttons">
              <div class="backBtn">
                <i class="uil uil-navigator"></i>
                <span class="btnText">Back</span>
              </div>
              <button id="submitButton" type="submit">
                <!-- <input type="submit" value="Submit" class="btnText" /> -->
                <span  class="btnText">Submit</span>
                <!-- <i class="uil uil-navigator"></i> -->
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>

